<script>
  function startBirthday() {
    const name = document.getElementById("username").value;
    if (name.trim() === "") return alert("Nama tidak boleh kosong!");

    document.getElementById("namePopup").style.display = "none";
    document.getElementById("scene").style.display = "block";
    document.getElementById("birthdayText").innerText = "Happy Birthday Ngoei Kimlun ðŸŽ‰";

    startConfetti(); spawnBalloons();
  }

  function blowCandle() {
    document.getElementById("flame").classList.add("hidden");
  }

  function spawnBalloons() {
      for (let i = 0; i < 10; i++) {
        const b = document.createElement('div');
        b.classList.add('balloon');
        b.style.left = Math.random() * 100 + 'vw';
        b.style.background = randomColor();
        b.style.animationDuration = (5 + Math.random() * 5) + 's';
        document.body.appendChild(b);
        setTimeout(() => b.remove(), 11000);
      }
    }

    function startConfetti() {
    for (let i = 0; i < 80; i++) {
      const conf = document.createElement("div");
      conf.classList.add("confetti");
      conf.style.left = Math.random() * 100 + "vw";
      conf.style.background = randomColor();
      conf.style.animationDuration = 2 + Math.random() * 3 + "s";
      document.body.appendChild(conf);

      setTimeout(() => conf.remove(), 4500);
    }
  }

  function randomColor() {
    const colors = ["#ff4757", "#1e90ff", "#2ed573", "#ffa502", "#eccc68", "#ff6b81", "#7bed9f"]; 
    return colors[Math.floor(Math.random() * colors.length)];
  }
</script>

  <audio id="birthdaySong" src="ulangtahun.mp3" autoplay loop></audio>
